<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="457.0" prefWidth="512.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.listadellaspesa.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" alignment="CENTER" prefHeight="44.0" prefWidth="164.0" text="Crea la tua Prima lista" />
   <Label fx:id="listOfList" alignment="CENTER" />
   <TextField fx:id="inputList" promptText="Nome Lista" />
   <HBox alignment="CENTER" prefHeight="37.0" prefWidth="472.0" spacing="15.0">
      <children>
          <Button fx:id="addListButton" onAction="#onaddListButton" text="Aggiungi lista" />
         <Button fx:id="cercaButton" disable="true" mnemonicParsing="false" onAction="#oncercaButton" text="Cerca" />
         <Button fx:id="addArticle" disable="true" mnemonicParsing="false" onAction="#onaddArticle" text="Aggiungi articolo" />
      </children>
   </HBox>
</VBox>
